<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor.SignUpFragments.WorkHoursFragment">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintBottom_toBottomOf="@+id/start_day_spinner"
        app:layout_constraintEnd_toEndOf="@+id/start_day_spinner"
        app:layout_constraintStart_toStartOf="@+id/start_day_spinner"
        app:layout_constraintTop_toTopOf="@+id/start_day_spinner" />

    <Spinner
        android:id="@+id/start_day_spinner"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:entries="@array/days"
        android:padding="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintBottom_toBottomOf="@+id/end_day_spinner"
        app:layout_constraintEnd_toEndOf="@+id/end_day_spinner"
        app:layout_constraintStart_toStartOf="@+id/end_day_spinner"
        app:layout_constraintTop_toTopOf="@+id/end_day_spinner" />

    <Spinner
        android:id="@+id/end_day_spinner"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="@dimen/_8sdp"
        android:entries="@array/days"
        android:padding="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_day_spinner" />


    <TextView
        android:id="@+id/start_hour_tv"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/spinner_border"
        android:gravity="center_vertical"
        android:hint="@string/start_hour"
        android:padding="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/choose_start_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/end_hour_tv"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/spinner_border"
        android:gravity="center_vertical"
        android:hint="@string/end_hour"
        android:padding="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/choose_end_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_hour_tv" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/time_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/end_hour_tv">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/time_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/time_for_each_case"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/choose_start_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/choose_time"
        app:layout_constraintBottom_toBottomOf="@+id/start_hour_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_hour_tv" />

    <Button
        android:id="@+id/choose_end_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/choose_time"
        app:layout_constraintBottom_toBottomOf="@+id/end_hour_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/end_hour_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>