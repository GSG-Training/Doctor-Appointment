<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor.ui.activities.signUpActivities.SpecializationActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/sign_up_toolbar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/specialization"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/sign_up_text_view_login_data"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/circle_active_bg"
        android:gravity="center"
        android:text="@string/one"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_toolbar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basic_info"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintStart_toStartOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view_login_data" />

    <View
        android:id="@+id/sign_up_view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_login_data" />

    <TextView
        android:id="@+id/sign_up_text_view_work_hour"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:background="@drawable/circle_bg"
        android:buttonTint="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/four"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_address"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_address" />

    <TextView
        android:id="@+id/sign_up_tv_work_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/working_hour"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_text_view_work_hour"
        app:layout_constraintStart_toStartOf="@+id/sign_up_text_view_work_hour"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view_work_hour" />

    <TextView
        android:id="@+id/sign_up_tv_specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specialization"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintStart_toStartOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view_specialization" />

    <View
        android:id="@+id/sign_up_view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_address"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_specialization" />

    <TextView
        android:id="@+id/sign_up_text_view_address"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:background="@drawable/circle_bg"
        android:gravity="center"
        android:text="@string/three"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_work_hour"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_specialization" />

    <TextView
        android:id="@+id/sign_up_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_text_view_address"
        app:layout_constraintStart_toStartOf="@+id/sign_up_text_view_address"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view_address" />

    <View
        android:id="@+id/sign_up_view3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_text_view_address"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_work_hour"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_address"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_address" />

    <TextView
        android:id="@+id/sign_up_text_view_specialization"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:background="@drawable/circle_active_bg"
        android:gravity="center"
        android:text="@string/two"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_address"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_login_data" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline15"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_tv_specialization">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/spinner_border"
                app:layout_constraintBottom_toBottomOf="@+id/specialization_spinner"
                app:layout_constraintEnd_toEndOf="@+id/specialization_spinner"
                app:layout_constraintStart_toStartOf="@+id/specialization_spinner"
                app:layout_constraintTop_toTopOf="@+id/specialization_spinner" />

            <Spinner
                android:id="@+id/specialization_spinner"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:entries="@array/specializations"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/experience_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/specialization_spinner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/experience_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/experience"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/biography_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/experience_input_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/biography_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:hint="@string/biography"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/sign_up_btn_next"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginStart="@dimen/_4sdp"
                android:onClick="next"
                android:text="@string/next"
                app:layout_constraintBottom_toBottomOf="@+id/sign_up_btn_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sign_up_btn_back"
                app:layout_constraintTop_toTopOf="@+id/sign_up_btn_back" />

            <Button
                android:id="@+id/sign_up_btn_back"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:onClick="back"
                android:text="@string/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sign_up_btn_next"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/biography_input_layout" />

            <ProgressBar
                android:id="@+id/specializationProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/biography_input_layout" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/specializationGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="sign_up_btn_next,sign_up_btn_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>