<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.doctor.ui.activities.signUpActivities.WorkHoursActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/sign_up_toolbar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/working_hour"
        app:titleTextColor="@color/white" />


    <TextView
        android:id="@+id/sign_up_text_view_login_data"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/circle_active_bg"
        android:gravity="center"
        android:text="@string/one"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/guideline18"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_toolbar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basic_info"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintStart_toStartOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view_login_data" />

    <View
        android:id="@+id/sign_up_view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_login_data" />

    <TextView
        android:id="@+id/sign_up_text_view_work_hour"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:background="@drawable/circle_active_bg"
        android:buttonTint="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/four"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_address"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_address" />

    <TextView
        android:id="@+id/sign_up_tv_work_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/working_hour"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_text_view_work_hour"
        app:layout_constraintStart_toStartOf="@+id/sign_up_text_view_work_hour"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view_work_hour" />

    <TextView
        android:id="@+id/sign_up_tv_specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specialization"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintStart_toStartOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view_specialization" />

    <View
        android:id="@+id/sign_up_view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_address"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_specialization" />

    <TextView
        android:id="@+id/sign_up_text_view_address"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:background="@drawable/circle_active_bg"
        android:gravity="center"
        android:text="@string/three"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_work_hour"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_specialization"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_specialization" />

    <TextView
        android:id="@+id/sign_up_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_text_view_address"
        app:layout_constraintStart_toStartOf="@+id/sign_up_text_view_address"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_text_view_address" />

    <View
        android:id="@+id/sign_up_view3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_text_view_address"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_work_hour"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_address"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_address" />

    <TextView
        android:id="@+id/sign_up_text_view_specialization"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:background="@drawable/circle_active_bg"
        android:gravity="center"
        android:text="@string/two"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintEnd_toStartOf="@+id/sign_up_text_view_address"
        app:layout_constraintStart_toEndOf="@+id/sign_up_text_view_login_data"
        app:layout_constraintTop_toTopOf="@+id/sign_up_text_view_login_data" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/guideline18"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_tv_specialization">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintTop_toBottomOf="@+id/sign_up_tv_specialization">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/spinner_border"
                app:layout_constraintBottom_toBottomOf="@+id/start_day_spinner"
                app:layout_constraintEnd_toEndOf="@+id/start_day_spinner"
                app:layout_constraintStart_toStartOf="@+id/start_day_spinner"
                app:layout_constraintTop_toTopOf="@+id/start_day_spinner" />

            <Spinner
                android:id="@+id/start_day_spinner"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:entries="@array/days"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/spinner_border"
                app:layout_constraintBottom_toBottomOf="@+id/end_day_spinner"
                app:layout_constraintEnd_toEndOf="@+id/end_day_spinner"
                app:layout_constraintStart_toStartOf="@+id/end_day_spinner"
                app:layout_constraintTop_toTopOf="@+id/end_day_spinner" />

            <Spinner
                android:id="@+id/end_day_spinner"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="@dimen/_8sdp"
                android:entries="@array/days"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@id/start_day_spinner" />

            <TextView
                android:id="@+id/start_hour_tv"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/spinner_border"
                android:gravity="center_vertical"
                android:hint="@string/start_hour"
                android:padding="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/choose_start_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/end_hour_tv"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/spinner_border"
                android:gravity="center_vertical"
                android:hint="@string/end_hour"
                android:padding="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/choose_end_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_hour_tv" />

            <Button
                android:id="@+id/choose_start_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:onClick="selectStartHour"
                android:text="@string/choose_time"
                app:layout_constraintBottom_toBottomOf="@+id/start_hour_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/start_hour_tv"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/choose_end_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:onClick="selectEndHour"
                android:text="@string/choose_time"
                app:layout_constraintBottom_toBottomOf="@+id/end_hour_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/end_hour_tv" />

            <Button
                android:id="@+id/sign_up_btn_next"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginStart="@dimen/_4sdp"
                android:onClick="next"
                android:text="@string/next"
                app:layout_constraintBottom_toBottomOf="@+id/sign_up_btn_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sign_up_btn_back"
                app:layout_constraintTop_toTopOf="@+id/sign_up_btn_back" />

            <Button
                android:id="@+id/sign_up_btn_back"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:onClick="back"
                android:text="@string/back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sign_up_btn_next"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/end_hour_tv" />

            <ProgressBar
                android:id="@+id/workingHourProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/end_hour_tv" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/workingHourGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="sign_up_btn_next,sign_up_btn_back" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />
</androidx.constraintlayout.widget.ConstraintLayout>