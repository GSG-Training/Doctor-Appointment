<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tamer.raed.doctorappointment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_health_insurance"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_health_insurance"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoctorAppointment">
        <activity android:name=".activity.ForgetPasswordActivity" />
        <activity android:name=".users.doctor.ui.activities.signUpActivities.WorkHoursActivity" />
        <activity android:name=".users.doctor.ui.activities.signUpActivities.AddressActivity" />
        <activity android:name=".users.doctor.ui.activities.signUpActivities.SpecializationActivity" />
        <activity android:name=".users.doctor.ui.activities.signUpActivities.PersonalDataActivity" />
        <activity android:name=".users.doctor.ui.activities.DoctorDashboardActivity" />
        <activity android:name=".users.patient.ui.activities.SettingsActivity" />
        <activity android:name=".users.patient.ui.activities.BookAppointmentActivity" />
        <activity android:name=".users.patient.ui.activities.DoctorDetailsActivity" />
        <activity android:name=".users.patient.ui.activities.SearchActivity" />
        <activity android:name=".users.patient.ui.activities.PatientSignUpActivity" />
        <activity android:name=".users.patient.ui.activities.PatientDashboardActivity" />
        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/welcome" />
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>